# Team Omega - Cloud Environment Configuration
# Copy to .env and configure for your deployment

# ===== AWS Configuration =====
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# ===== DynamoDB Configuration =====
# Use existing EC2 infrastructure tables
EXISTING_DDB_TABLE_NAME=UGVTelemetry
EXISTING_LIDAR_TABLE_NAME=UGVLidarScans
ULTRASONIC_TABLE_NAME=UGVUltrasonic
BATTERY_TABLE_NAME=UGVBattery
IMAGES_TABLE_NAME=UGVImages

# ===== API Configuration =====
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_LOG_LEVEL=INFO
CORS_ORIGINS=*

# ===== Dashboard Configuration =====
DASHBOARD_PORT=3000
DASHBOARD_HOST=0.0.0.0
REACT_APP_API_BASE_URL=http://localhost:8000

# ===== Database Configuration =====
# For local development, use DynamoDB Local
DB_TYPE=dynamodb_local
DYNAMODB_LOCAL_URL=http://localhost:8000
DYNAMODB_LOCAL_REGION=us-west-2

# ===== Image Storage =====
IMAGE_STORAGE_PATH=/data/images
IMAGE_MAX_SIZE_MB=10
IMAGE_FORMATS=jpg,jpeg,png
S3_BUCKET_NAME=astra-images
S3_ENABLED=false

# ===== Security =====
API_KEY_HEADER=X-API-Key
API_KEY_REQUIRED=true
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# ===== Monitoring =====
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true
LOG_AGGREGATION_ENABLED=false

# ===== EC2 Integration =====
EC2_INSTANCE_ID=your_ec2_instance_id
EC2_REGION=us-west-2
EC2_SSH_KEY_PATH=~/.ssh/astra-key.pem
EC2_USER=ubuntu

# ===== ZeroTier Configuration =====
ZEROTIER_NETWORK_ID=your_zerotier_network
ZEROTIER_ENABLED=true
ZEROTIER_LOCAL_IP=10.147.20.100
